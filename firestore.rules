rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function signedIn() {
      return request.auth != null;
    }

    match /ideas/{ideaID} {
      function ownIdea(){
        return request.resource.data.reporter == request.auth.uid;
      }

      function hasValidData(){
        return request.resource.data.user != null
          && request.resource.data.title != null
          && request.resource.data.label != null
          && request.resource.data.timestamp != null
          && request.resource.data.approved == false
          && request.resource.data.title is string
          && request.resource.data.title is string
          && request.resource.data.label is string
          && request.resource.data.timestamp is timestamp
          && request.resource.data.approved is bool
          && ownIdea();
      }

      allow read, list: if true;
      allow write: if signedIn() && hasValidData();
    }
  }
}